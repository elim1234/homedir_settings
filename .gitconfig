[user]
	name = Jeremy Schwartz
	email = jeremy@romotive.com
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[push]
	default = tracking
[alias]
  st = status
  lc = log --stat --no-merges
  k  = !gitk --all
  di = diff -b
  smu = submodule update --init --recursive
  see = log --graph --full-history --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

